<h1> Countries </h1>

<table>
  <thead>
    <tr>
      <th><%= sortable 'name', 'Name' %></th>
      <th>Abbreviation</th>
      <th>Active</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
  <% for country in @countries %>
    <tr  class='<%= cycle("odd", "")%>'>
        <td><%= country.name %></td>
        <td><%= country.abbreviation %></td>
        <td><%= country.active %></td>
        <td><%= link_to t(:button_edit), edit_admin_config_country_path(country) %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<%= will_paginate @countries %>

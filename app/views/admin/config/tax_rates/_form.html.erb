<%= error_msgs_for(@tax_rate) %>

<fieldset>
  <label>Percentage</label>
  <%= f.text_field :percentage %>

  <label>Tax Category</label>
  <%= f.select :tax_category_id, @tax_categories, {:include_blank => true} %>

  <label>Country</label>
  <%= select_tag :select_country, options_from_collection_for_select(@countries, "second", "first"), {:include_blank => true} %>

  <label>State</label>
  <%= f.select :state_id, @states, {:include_blank => true} %>

  <label>Start Date</label>
  <div class='date-select'>
    <%= f.date_select :start_date %>
  </div>

  <label>End Date</label>
  <div class='date-select'>
    <%= f.date_select :end_date %>
  </div>

  <label>Active</label>
  <%= f.check_box :active %>
</fieldset>

